{% extends "base.jinja2" %}

{% block content %}

     <a href="{{request.route_url('add')}}"><h3>NewEntry</h3></a>

    {% for entry in entries %}

        <h4>
            <a href="{{request.route_url('detail', detail_id=entry.id)}}">
            {{entry.title}}
            </a>
        </h4>

        <h4>{{entry.created.strftime('%Y-%m-%d at %H:%M UTC')}}</h4>

        </br>
    {% endfor %}

{% endblock %}